<%= form_for @image, :html => {:multipart => true} do |f| %>

  <div><%= f.label :descricao %><br />
  <%= f.text_area(:descricao, :size => "24x6") %></div>

	<div><%= f.label :atributo_id %>
		<%= f.select :atributo_id, @atributos.map {|s| [s.nome, s.id]}, :selected => @image.atributo_id %>
	</div>

  <div>
  	<%= f.file_field :photo %>
  </div>

  <div><%= f.submit "Criar" %></div>
<% end %>
