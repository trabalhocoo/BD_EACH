<%= form_for @image, :html => {:multipart => true} do |f| %>

  <div><%= f.label :descricao %><br />
  <%= f.text_area(:descricao, :size => "24x6") %></div>

	<div><%= f.label :atributo_id %>
		<% @atributo.each do |atributo| %>
			<ul>
				<li><%= check_box_tag "image[atributo_ids][]", atributo.id, @image.atributos.include?(atributo) %> <%= atributo.nome %></li>
			</ul>
		<% end %>
	</div>

  <div>
  	<%= f.file_field :photo %>
  </div>

  <div><%= f.submit "Criar" %></div>
<% end %>
