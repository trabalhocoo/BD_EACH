<div id="sugerir_atributos">
		<% if usuario_signed_in?%>
			<h2>Sugira Atributos</h2>
				<% @image.atributos.each do |atributo| %>
					<% if check_suggestions(atributo.id, @image.id) == nil %>
						<ul>
						<%= form_for([@image, @image.suggestions.build]) do |f| %>
							<li><%=f.label atributo.nome %><br \><%= f.text_field :sugestao%> <%= f.submit "Criar SugestÃ£o" %></li>
							<%= f.hidden_field :atributo_id, :value => atributo.id %>
							<%= f.hidden_field :usuario_id, :value => current_usuario.id %>
							<%= f.hidden_field :image_id, :value => @image.id %>
						<% end %>
						</ul>
					<% end %>
				<% end %>
		<% end %>
</div>
