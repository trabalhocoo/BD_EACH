<table cellspacing="30" >

	<tr>
	<td><h2>Imagens</h2></td>
	</tr>
	
	<%  @cont_img = 0 %>

	<% @image.each do |image| %>
		<% if @cont_img % 5 == 0 %>
			<tr >
		<%end%>
			<% @cont_img += 1%>
			<td>
				<%= link_to (image_tag image.photo.url(:small)), :controller => "images", :action => "show", :id => image.id %>
			</td>
		<% if @cont_img % 5 == 0 %>
			</tr>
		<%end%>
	<% end %>

</table>

