<!DOCTYPE html>
<html>
<head>
  <title><%= @title || "Scii" %></title>
  <%= stylesheet_link_tag    "application" %>
   <%= stylesheet_link_tag   "templatemo_style" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id="templatemo_site_title_bar_wrapper">
		<div id="templatemo_site_title_bar">
	    
			<div id="site_title">
		        <h1><%= link_to (image_tag ("ilustracao/templatemo_logo.png",  :alt => "Portfolio",  :width=>"319",  :height=>"75")), :root %></h1>
			</div>
		        
			<div id="templatemo_menu">
				<ul>
					<li><span><%= link_to "Home", :root %></span></li>				
					<% if usuario_signed_in? %>
						<li><span></span></li>
						<!--<li><span><%= link_to "Usuarios", :usuarios %></span></li>-->
						<li><span><%= link_to current_usuario.nome, usuario_path(current_usuario, :view => "show") %></span></li>
						<li><span><%= link_to "Sair", destroy_usuario_session_path, :method => :delete %></span></li>
					<% else %>
						<li><%= link_to "Entrar", new_usuario_session_path %></li>
						<li><%= link_to "Cadastre-se", new_usuario_registration_path %></li>
					<% end %>
				</ul> 
	  		</div> 
		</div>
	</div>
	    	<% flash.each do |key, value| %>
			<div class='flash' id='<%= key %>'>
				<%= value %>
			</div>
			<% end %>
	<%= yield %>

	</body>
</html>

