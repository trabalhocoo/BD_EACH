<% @title = @usuario.nome %>

<h2><%= @usuario.nome %></h2>

<ul>
	<% @image.each do |image| %>
		<li><%= link_to (image_tag image.photo.url(:small)), :controller => "images", :action => "show", :id => image.id %></li>	
	<% end %>
</ul>

<% if usuario_signed_in? %>
		<ul>
		<% @atributo.each do |atributo| %>
			<% if current_usuario.id == atributo.usuario_id%>
				<li><%= atributo.nome %> - <%= link_to "Editar Atributo", edit_atributo_path(atributo) %></li>
			<% end %>
		<% end %>
		</ul>
<% end %>

